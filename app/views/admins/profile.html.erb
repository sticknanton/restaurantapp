<h1> <%= current_user.username %> </h1>
<%= button_to "Log-Out", sessions_path, method: :delete, class: "waves-effect waves-light btn" %><br><br>



<h4>Add New Item</h4>
<%= form_for @menuitem, url: admin_menu_items_path(current_user), :html => {:class => 'active'} do |f| %>
<div class="row">
  <div class="col s4 push-s2">
    <%= f.text_field :category %>
    <%= f.label :category %>
  </div>
  <div class="col s4 push-s2">
    <%= f.number_field :price, :class => 'text_field', :step => 'any' %>
    <%= f.label :price %>
  </div>
</div>
<div class="row">
  <div class="col s4 push-s2">
    <%= f.text_field :name %>
    <%= f.label :name %>
  </div>
  <div class="col s4 push-s2">
    <%= f.submit "Create Item", class: "waves-effect waves-light btn" %>
  </div>
</div>
<% end %>
â€‹

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Price</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @menuitems.each do |item| %>
    <tr>
      <td><%= item.category %></td>
      <td><%= '%.2f' % item.price %></td>
      <td><%= item.name %></td>
      <td><%= button_to "Delete", item, :method => :delete %></td>

    </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= form_for @server, url: admin_servers_path(current_user) do |f| %>
<div class="row">
  <div class="col s4 push-s2">
    <%= f.text_field :name %>
    <%= f.label :name %>
  </div>
  <div class="col s4 push-s2">
    <%= f.submit "Hire Server", class: "waves-effect waves-light btn" %>
  </div>
</div>
<% end %>

<ul>
  <%@servers.each do |server| %>
  <li><%=server.name%><%= button_to "delete", server, :method => :delete %></li>
  <% end %>
</ul>
