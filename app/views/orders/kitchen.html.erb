<h1>Kitchen SCREEN!!</h1>

<ul>
  <% @eats.each do |eat| %>
<div class="row">
<div class="col s5 push-s3">
  <% if ((time_ago_in_words(eat.created_at).to_i) < 7) %>
    <li class="new-class"><%= eat.menu_item.name %> Party #<%= eat.party_id %> | <%= time_ago_in_words(eat.created_at) %>
    <% elsif ((time_ago_in_words(eat.created_at).to_i) < 12) %>
    <li class="med-class"><%= eat.menu_item.name %> Party #<%= eat.party_id %> | <%= time_ago_in_words(eat.created_at) %> 
    <% else %>
    <li class="hurry-class"><%= eat.menu_item.name %> Party #<%= eat.party_id %> | <%= time_ago_in_words(eat.created_at) %>
    <% end %>
  </div>
  <div class="s1">
    <%=form_for eat, url: order_path(eat) do |f| %>
    <%=f.hidden_field :done, :value => true %>
    <%=f.submit "âœ“"%>
    <% end %>
    </li>
  </div>
</div>
<% end %>
</ul>
